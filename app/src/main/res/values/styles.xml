<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/black</item>  <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@android:color/black</item><!-- Color of Overflow Menu ( 3 dots icon )
                                                                                    and color of Navigation Drawer Icon-->
    </style>

    <style name="MyButtonTheme" parent="Base.ThemeOverlay.AppCompat.Dark">

        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
