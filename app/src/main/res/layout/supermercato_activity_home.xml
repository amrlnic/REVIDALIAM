<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".supermercato.HomeSupermercato">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/layoutLogo"
    >
        <ImageView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/revidaliam_logo"
                android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"

        android:theme="@style/MyButtonTheme">

        <android.support.v7.widget.CardView
            android:id="@+id/aggiungiprodotto"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/aggiungiprodotto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aggiungi Prodotto"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/listaprodotti"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:src="@drawable/lista"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mostra Prodotti"
                    android:textSize="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/profilo"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginVertical="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/supermarket" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profilo"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
    >

        <ImageView
                android:id="@+id/setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/configuration"
                android:layout_alignParentEnd="true"

        />

    </RelativeLayout>

</RelativeLayout>