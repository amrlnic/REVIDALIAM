<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".utente.SceltaIndirizzoActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/layoutLogo"
    >
        <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:src="@drawable/revidaliam_logo"
                android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/label"
            android:layout_below="@id/layoutLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scegli se spedire all'indirizzo corrente o inserisci manualmente un nuovo indirizzo"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <LinearLayout
            android:layout_below="@id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:theme="@style/MyButtonTheme">

        <Button
                android:id="@+id/indirizzoCorrente"
                android:text="Indirizzo\nCorrente"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/buttonbg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
        />

        <Button
                android:id="@+id/inserisciIndirizzo"
                android:text="Inserisci\nIndirizzo"
                android:textSize="35dp"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/buttonbg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
        />

    </LinearLayout>

</RelativeLayout>