<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".utente.DettagliUtente">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".utente.DettagliUtente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp">
                <ImageView
                    android:src="@drawable/grandfather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:text="Nome:"/>
                        <TextView
                            android:id="@+id/nome"
                            android:text="Raffaele"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                        />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_marginLeft="30dp"
                            android:layout_height="match_parent"
                            android:text="Cognome:"/>
                        <TextView
                            android:id="@+id/cognome"
                            android:text="Villani"
                            android:layout_marginLeft="24dp"

                            android:layout_alignParentEnd="true"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                    <ImageView
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_marginLeft="2dp"
                            android:layout_height="match_parent"
                            android:text="Username:"/>
                        <TextView
                            android:id="@+id/username"
                            android:text="Raff1997"
                            android:layout_alignParentEnd="true"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                    <ImageView
                        android:src="@drawable/ic_email_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_marginLeft="2dp"
                            android:layout_height="match_parent"
                            android:text="Email:"/>
                        <TextView
                            android:id="@+id/email"
                            android:text="raff@gmail.com"
                            android:layout_alignParentEnd="true"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:text="Indirizzo:"/>
                        <TextView
                            android:id="@+id/indirizzo"
                            android:text="via raffo de raffis ,Paris"
                            android:layout_alignParentEnd="true"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </FrameLayout>

        <Button
            android:id="@+id/modificaDati"
            android:text="Modifica Dati"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_mode_edit_black_24dp"
            android:drawablePadding="10dp"
            style="@style/Widget.MaterialComponents.Button"/>

            <Button
                android:id="@+id/logout"
                android:text="Logout"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
                android:drawablePadding="10dp"
                style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>

</RelativeLayout>
</ScrollView>