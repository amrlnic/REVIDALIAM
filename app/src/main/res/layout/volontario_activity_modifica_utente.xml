<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".utente.ModificaUtente">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
        </FrameLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp">
                <ImageView
                        android:src="@drawable/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
        </FrameLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <TextView
                                android:gravity="center_vertical"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:text="Nome:"/>
                        <EditText
                                android:gravity="center"
                                android:id="@+id/nome"
                                android:text="Raffaele"
                                android:textSize="13dp"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <TextView
                                android:gravity="center_vertical"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:text="Cognome:"/>
                        <EditText
                                android:gravity="center"
                                android:id="@+id/cognome"
                                android:text="Villani"
                                android:textSize="13dp"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:gravity="center_vertical"
                                android:layout_width="70dp"
                                android:textSize="13dp"
                                android:layout_marginLeft="2dp"
                                android:layout_height="match_parent"
                                android:text="Username:"/>
                        <EditText
                                android:gravity="center"
                                android:id="@+id/username"
                                android:textSize="13dp"
                                android:text="Raff1997"
                                android:layout_width="180dp"
                                android:layout_height="match_parent" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:gravity="center_vertical"
                                android:text="Email:"
                                android:textSize="13dp" />
                        <EditText
                                android:gravity="center"
                                android:id="@+id/email"
                                android:text="raff@gmail.com"
                                android:layout_width="190dp"
                                android:textSize="13dp"
                                android:layout_height="match_parent" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <TextView
                                android:gravity="center_vertical"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"

                                android:textSize="13dp"
                                android:text="Indirizzo:"/>
                        <EditText
                                android:gravity="center"
                                android:id="@+id/indirizzo"
                                android:text="via raffo de raffis ,Paris"
                                android:layout_width="180dp"
                                android:textSize="13dp"
                                android:layout_height="wrap_content" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="10dp">
        </FrameLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/conferma"
                    android:text="Conferma"
                    android:textSize="15dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button"/>

            <Button
                    android:id="@+id/annulla"
                    android:text="Annulla"
                    android:textSize="15dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>