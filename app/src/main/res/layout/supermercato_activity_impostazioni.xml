<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".utente.ImpostazioniActivity">

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:theme="@style/MyButtonTheme"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView
                android:id="@+id/cardLocazione"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:text="Geolocazione"
                        android:textSize="25dp"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"


                        android:layout_height="wrap_content"/>

                <Switch android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/cardNotifiche"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:text="Notifiche"
                        android:textSize="25dp"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"


                        android:layout_height="wrap_content"/>

                <Switch android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/profilo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:text="Upgrade Automatico"
                        android:textSize="25dp"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"


                        android:layout_height="wrap_content"/>

                <Switch android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_margin="30dp"
            android:text="Logout"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
            android:drawablePadding="10dp"
            style="@style/Widget.MaterialComponents.Button"/>

</RelativeLayout>