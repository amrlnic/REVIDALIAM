<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".utente.DettagliUtente">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/layoutLogo"
        >
            <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:src="@drawable/revidaliam_logo"
                    android:layout_centerHorizontal="true"
            />

        </RelativeLayout>

        <LinearLayout
                android:layout_below="@id/layoutLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <LinearLayout
                    android:background="@drawable/border"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:text="Nome E Cognome:"/>
                            <TextView
                                    android:id="@+id/nome"
                                    android:text="Raffaele Villani"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                            />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:layout_width="70dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="match_parent"
                                    android:text="Username:"/>
                            <TextView
                                    android:id="@+id/username"
                                    android:text="Raff1997"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="180dp"
                                    android:layout_height="match_parent"/>
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        <ImageView

                                android:layout_width="30dp"
                                android:layout_height="wrap_content"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <TextView
                                    android:layout_width="120dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_height="match_parent"
                                    android:text="NumeroProdotti:"/>
                            <TextView
                                    android:id="@+id/numeroprodotti"
                                    android:text="15"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="180dp"
                                    android:layout_height="match_parent"/>
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:text="Indirizzo:"/>
                            <TextView
                                    android:id="@+id/indirizzo"
                                    android:text="via Pendino,Nocera(SA)"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:text="Indirizzo Supermercato:"/>
                            <TextView
                                    android:id="@+id/indirizzosupermercato"
                                    android:text="via roma 15, Fisciano (SA)"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="170dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:text="Distanza:"/>
                            <TextView
                                    android:id="@+id/distanza"
                                    android:text="3km"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:background="@drawable/border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="230dp"
                            android:layout_height="30dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <TextView
                                    android:gravity="center"
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="30dp"
                                    android:text="Prezzo Totale:"/>
                            <TextView
                                    android:id="@+id/prezzoTotale"
                                    android:gravity="center"
                                    android:text="30,99"
                                    android:layout_marginRight="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                            />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <Button
                            android:id="@+id/listaprodotti"
                            android:text="Lista Prodotti"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Button"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="85dp">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <TextView
                                    android:layout_width="300dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:text="Una volta che la richiesta sarà accettata non sarà possibile rifiutarla,per il rispetto dei nostri clienti, quindi cerca di essere sicuro di poter soddisfare la richiesta prima di completare la conferma di presa in carico."/>

                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <Button
                    android:id="@+id/accettarichiesta"
                    android:text="Accetta"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>